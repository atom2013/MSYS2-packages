diff --git a/Makefile.in b/Makefile.in
index faf2a70..6a73b4c 100644
--- a/Makefile.in
+++ b/Makefile.in
@@ -153,6 +153,7 @@ SWIG_PY_COMPILE = @SWIG_PY_COMPILE@
